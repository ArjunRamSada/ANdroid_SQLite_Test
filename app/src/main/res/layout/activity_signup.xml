<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nidbid.sqlite.SignupActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Sign Up"
        android:textAppearance="@android:style/TextAppearance.Material.Headline" />

    <EditText
        android:id="@+id/ETNM"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ETEML"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ETUNM"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/ETEML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ETUNM"
        android:layout_below="@+id/ETUNM"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textPersonName"
        android:layout_alignEnd="@+id/ETUNM" />

    <EditText
        android:id="@+id/ETPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ETEML"
        android:layout_alignStart="@+id/ETEML"
        android:layout_below="@+id/ETEML"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/ETCPWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ETPWD"
        android:layout_below="@+id/ETPWD"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_alignStart="@+id/ETPWD" />

    <Button
        android:id="@+id/BTCNF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/ETCPWD"
        android:layout_marginTop="61dp"
        android:text="Confirm" />

</RelativeLayout>
